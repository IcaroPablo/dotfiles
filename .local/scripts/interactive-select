#!/bin/sh

set -e

SEL_FILE="/tmp/sel_items"

[ ! -f "$SEL_FILE" ] && touch "$SEL_FILE"

increment_only=false
show_selected=false
show_hidden=false

while [ "$#" -gt 0 ]; do
    case "$1" in
        --increment-only)
            increment_only=true
            shift
            break;;
        --show-selected)
            show_selected=true
            shift
            break;;
        --show-hidden)
            show_hidden=true
            shift
            break;;
        # TODO
        # --use-selected-only)
        #     use_selected_only=true
        #     break;;
        *)
            break;;
    esac
done

[ "$show_selected" = true ] && cat "$SEL_FILE" && exit 0

[ ! "$increment_only" = true ] && cat /dev/null > "$SEL_FILE"


if [ "$show_hidden" = true ];then
    items="$(eza -1 --group-directories-first --icons always -a)"
else
    items="$(eza -1 --group-directories-first --icons always)"
fi

temp="$(mktemp)"

echo "$items" | fzf -m \
    --bind 'ctrl-v:toggle+clear-query' \
    --bind 'alt-v:toggle-all+clear-query' \
    --height 100% \
    --color=bg+:-1 \
    --border=sharp \
    --info=inline \
    --reverse \
    --preview='echo {} | sed s/^..// | xargs preview' >> $temp

if [ "$(cat $temp)" != "" ];then
    cat "$temp" | sed 's/^..//' | xargs readlink -f | tee -a "$SEL_FILE"
fi

[ "$1" != "" ] && eval "cat $SEL_FILE | xargs -I {} $@ {}"
